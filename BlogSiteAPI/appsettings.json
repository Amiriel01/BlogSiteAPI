{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //add connection string to connect the database and the application to store the Categories and BlogPosts
  "ConnectionStrings": {
    //key/value pair, key is the name of the connection string, the value is the server, database, and any additional info needed
    "BlogSiteConnectionString": "Server=localhost; Database=BlogSiteDb; TrustServerCertificate=True; Trusted_Connection=True"
  },
  //block for jwt variables
  "Jwt": {
    //make up the key, type random letters
    "Key": "ceibbeibaebvvcncoeugbvwebeo",
    //get issuer from the properties https applicationurl
    "Issuer": "https://localhost:7013",
    //the audience is the Angular application local host port
    "Audience": "https://localhost:4200"
  }
}
